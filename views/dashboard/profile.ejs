<%- include("../partials/header") %>
<main class="content">
  <div class="container-fluid p-0">

    <h1 class="h3 mb-3">Profile</h1>

    <div class="row">
      <div class="col-md-5 col-xl-4">
        <div class="card mb-3">
          <div class="card-header">
            <h5 class="card-title mb-0">Profile Details</h5>
          </div>
          <div class="card-body text-center">
            <img src="<%= student.profileImageUrl %>" alt="<%= student.firstName %> <%= student.middleName %> <%= student.lastName %>" class="img-fluid rounded-circle mb-2" style="width: 128px; height: 128px; object-fit: cover;" />
            <h5 class="card-title mb-0"><%= student.firstName %> <%= student.middleName %> <%= student.lastName %></h5>
            <div class="text-muted mb-2"><%= student.class.name %> Student</div>
          </div>
          <hr class="my-0" />
          <div class="card-body">
            <h5 class="h6 card-title">Subjects</h5>
            <a href="#" class="badge bg-primary me-1 my-1">English Language</a>
            <a href="#" class="badge bg-primary me-1 my-1">Mathematics</a>
            <a href="#" class="badge bg-primary me-1 my-1">Christian Religious Studies</a>
            <a href="#" class="badge bg-primary me-1 my-1">Cultural and Creative Arts</a>
            <a href="#" class="badge bg-primary me-1 my-1">Civic Education</a>
            <a href="#" class="badge bg-primary me-1 my-1">Computer Science</a>
          </div>
        </div>
      </div>

      <div class="col-md-7 col-xl-8">
        <div class="card">
          <div class="card-header">

            <h5 class="card-title mb-0">Profile Details</h5>
          </div>
          <div class="card-body h-100">

            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Full Name:</strong>
                <p class="text-muted mb-0"><%= student.firstName %> <%= student.middleName %> <%= student.lastName %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Nationality:</strong>
                <p class="text-muted mb-0"><%= student.country %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>State Of Origin:</strong>
                <p class="text-muted mb-0"><%= student.stateOfOrigin %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Gender:</strong>
                <p class="text-muted mb-0"><%= student.gender %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Date Of Birth:</strong>
                <p class="text-muted mb-0"><%= student.dateOfBirth %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Religion:</strong>
                <p class="text-muted mb-0"><%= student.religion %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Class:</strong>
                <p class="text-muted mb-0"><%= student.class.name %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Guardian's Full Name:</strong>
                <p class="text-muted mb-0"><%= student.guardian.firstName %> <%= student.guardian.middleName %> <%= student.guardian.lastName %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Address:</strong>
                <p class="text-muted mb-0"><%= student.address %></p>
              </div>
            </div>
            <hr />
            <div class="d-flex align-items-center gap-2">
              <i class="align-middle" data-feather="circle"></i>
              <div class="flex-grow-1 d-flex gap-2">
                <strong>Registration Number:</strong>
                <p class="text-muted mb-0"><%= student.registrationNumber %></p>
              </div>
            </div>

            <hr />
            <div class="d-grid">
              <a href="#" class="btn btn-primary">Load more</a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>
<!-- Modal -->
<div class="modal fade" id="centeredModalPrimary" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <form action="?action=make-student" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Make Student</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body m-3">
          <p class="mb-0">Are you sure you want to make <b><%- student.firstName %> <%- student.middleName %> <%- student.lastName %></b> a student?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success">Yes, Make student</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>